<div class="container-fluid">
  <h3 class="page-title">修改密码</h3>
  <div class="row">
    <div class="col-md-12">
      <!-- BORDERED TABLE -->
      <div class="panel">
        <div class="panel-heading"></div>
        <div class="panel-body" style="padding-top: 0">
          <div class="row">
            <div class="form-group col-xs-4">
              <label class="form-control-label">原密码: </label>
              <input type="password" id="old_pwd">
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-4">
              <label class="form-control-label">新密码: </label>
              <input type="password" id="new_pwd">
            </div>
          </div>
          <div>
            <button class="btn btn-primary" onclick="update_pwd()">修改</button>
          </div>
        </div>
        <div style="padding: 10px"></div>
      </div>
      <!-- END BORDERED TABLE -->
    </div>
  </div>
</div>

<% content_for :js do %>
    <script>
      function update_pwd() {
          $.ajax({
              url:'/agent/users/recover_password',
              type:'post',
              data:{
                  current_password:$("#old_pwd").val(),
                  password:$("#new_pwd").val()
              },
              success:function (data) {
                  alert(data.msg)
                  if(data.code==0){
                      window.location.href='/agent'
                  }
              }
          })
      }
    </script>
<%end%>