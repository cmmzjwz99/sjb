<table class="table table-bordered">
  <thead>
  <tr>
    <th>id</th>
    <th>用户</th>
    <th>充值／提现</th>
    <th>流水号</th>
    <th>金额(元)</th>
    <th>充值时间</th>
    <th>状态</th>
  </tr>
  </thead>

  <tbody>
  <%@payments.each do |ele|%>
      <tr>
        <td><%=ele.id%></td>
        <td><%= ele.user.login %></td>
        <td><%=ele.payment_type ? '充值' : '提现'%></td>
        <td><%= ele.no %></td>
        <td><%=ele.balance%></td>
        <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
        <td>
          <% if ele.status == 0 %>
              <a>未审核</a>
          <% elsif ele.status == 1 %>
              <a>成功</a>
          <% elsif ele.status == 2 %>
              <a>失败</a>
          <% end %>
        </td>
      </tr>
  <%end%>
  </tbody>
</table>




