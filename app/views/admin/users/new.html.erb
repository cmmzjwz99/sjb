<nav class="breadcrumb sl-breadcrumb">
  <!--a class="breadcrumb-item" href="index.html">Starlight</a-->
  <a class="breadcrumb-item" href="index.html">用户管理</a>
  <span class="breadcrumb-item active">新建用户</span>
</nav>

<div class="sl-pagebody">
  <%= form_for([:admin, @user], :html => {enctype: 'multipart/form-data', class: 'stdform'}) do |f| %>
      <div class="sl-page-title" style="margin-bottom: 0">
        <div class="card pd-20 pd-sm-40">
          <h6 class="card-body-title">新建用户</h6>

          <div class="form-layout">
            <div class="row mg-b-15">
              <div class="col-lg-5">
                <div class="form-group">
                  <label class="form-control-label">账号: </label>
                  <%= text_field_tag('user[login]', @user.login, {class: 'form-control'}) %>
                </div>
                <div class="form-group">
                  <label class="form-control-label">密码: </label>
                  <%= text_field_tag('user[password]', @user.password, {class: 'form-control'}) %>
                </div>
                <div class="form-group">
                  <label class="form-control-label">身份: </label>
                  <select class="form-control select2" data-placeholder="Choose country" value="<%= @user.location %>" name="user[identity]">
                    <option value="3" <%= @user.identity == 3 ? 'selected' : '' %>>录入员</option>
                    <option value="5" <%= @user.identity == 5 ? 'selected' : '' %>>催收</option>
                    <option value="6" <%= @user.identity == 6 ? 'selected' : '' %>>财务</option>
                  </select>
                </div>
                <div class="form-group">
                  <label class="form-control-label">所属地区: </label>
                  <select class="form-control select2" data-placeholder="Choose country" value="<%=@user.location%>" name="user[location]">
                    <%UserArea.where({}).each do |ele|%>
                        <option value="<%=ele.name%>" <%=@user.location == ele.name ? 'selected':''%>><%=ele.name%></option>
                    <%end%>
                  </select>
                </div>
              </div><!-- col-4 -->
            </div><!-- row -->
            <div class="form-layout-footer">
              <button class="btn btn-info mg-r-5">保存</button>
            </div><!-- form-layout-footer -->
          </div>

        </div>
      </div><!-- sl-page-title -->
  <% end %>

</div><!-- sl-pagebody -->


<%content_for :js do%>
    <script>

        $(function () {
            if(GetQueryString('msg')=='zhycz'){
                alert('账号已存在')
            }
        })
        function GetQueryString(name)
        {
            var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
            var r = window.location.search.substr(1).match(reg);
            if(r!=null)return  unescape(r[2]); return null;
        }
    </script>
<%end%>