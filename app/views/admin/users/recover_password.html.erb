<nav class="breadcrumb sl-breadcrumb">
  <!--a class="breadcrumb-item" href="index.html">Starlight</a-->
  <a class="breadcrumb-item" href="index.html">用户管理</a>
  <span class="breadcrumb-item active">用户信息</span>
</nav>

<div class="sl-pagebody">
  <div class="sl-page-title" style="margin-bottom: 0">
    <div class="card pd-20 pd-sm-40">
      <h6 class="card-body-title">用户信息</h6>

      <div class="form-layout">
        <div class="row mg-b-15 mg-t-15">
          <div class="col-lg-4">
            <div class="form-group">
              <label class="form-control-label">新密码: </label>
              <%= text_field_tag('password', '', {class: 'form-control',type:'password'}) %>
            </div>
            <div class="form-group">
              <label class="form-control-label">确认新密码: </label>
              <%= text_field_tag('confirm', '', {class: 'form-control',type:'password'}) %>
            </div>

          </div><!-- col-4 -->
        </div><!-- row -->
        <div class="form-layout-footer">
          <button class="btn btn-info mg-r-5" onclick="update()">保存</button>
        </div><!-- form-layout-footer -->
      </div>

    </div>
  </div><!-- sl-page-title -->

</div><!-- sl-pagebody -->


<% content_for :js do %>
    <script>
        function update() {
            $.ajax({
                url: '<%=recover_password_admin_users_path%>',
                type: 'post',
                data: {
                    password:$("#password").val(),
                    confirm: $("#confirm").val()
                },
                success: function (data) {
                    if(data.code==0){
                        alert('修改密码成功！')
                    }else{
                        alert('修改密码失败！')
                    }
                }
            })
        }
    </script>
<% end %>