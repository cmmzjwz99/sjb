<%= form_for([:admin, @user], :html => {enctype: 'multipart/form-data', class: 'stdform'}) do |f| %>
    <div class="sl-page-title" style="margin-bottom: 0">
      <div class="card pd-20 pd-sm-40">
        <h6 class="card-body-title">用户信息</h6>

        <div class="form-layout">
          <div class="row mg-b-15">
            <div class="col-lg-5">
              <div class="form-group">
                <label class="form-control-label">真实姓名: </label>
                <%= text_field_tag('user[name]', @user.name, {class: 'form-control'}) %>
              </div>
              <div class="form-group">
                <label class="form-control-label">手机号: </label>
                <%= text_field_tag('user[phone]', @user.phone, {class: 'form-control'}) %>
              </div>
              <div class="form-group">
                <label class="form-control-label">员工编号: </label>
                <%= text_field_tag('user[userno]', @user.userno, {class: 'form-control'}) %>
              </div>
              <div class="form-group">
                <label class="form-control-label">所属地区: </label>
                <select class="form-control select2" data-placeholder="Choose country" value="<%=@user.location%>" name="user[location]">
                  <option value="zjwz" <%=@user.location == 'zjwz'?'selected':''%>>浙江温州</option>
                  <option value="zjsxsz" <%=@user.location == 'zjsxsz'?'selected':''%>>绍兴嵊州</option>
                  <option value="zjsxkq" <%=@user.location == 'zjsxkq'?'selected':''%>>绍兴柯桥</option>
                  <option value="zjsxyc" <%=@user.location == 'zjsxyc'?'selected':''%>>绍兴越城</option>
                  <option value="zjhz" <%=@user.location == 'zjhz'?'selected':''%>>浙江杭州</option>
                  <option value="ahhf" <%=@user.location == 'ahhf'?'selected':''%>>安徽合肥</option>
                </select>
              </div>
            </div><!-- col-4 -->
          </div><!-- row -->
          <div class="form-layout-footer">
            <button class="btn btn-info mg-r-5">保存</button>
          </div><!-- form-layout-footer -->
        </div>

      </div>
    </div><!-- sl-page-title -->
<% end %>