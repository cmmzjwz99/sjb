<table class="table table-bordered">
  <thead>
  <tr>
    <th>#</th>
    <th>类型</th>
    <th>金额</th>
    <th>状态</th>
    <th>充值时间</th>
  </tr>
  </thead>
  <tbody>
  <%@user.payments.each do |ele|%>
      <tr>
        <td><%=ele.id%></td>
        <td><%=ele.payment_type ? '充值' : '提现'%></td>
        <td><%=ele.balance%></td>
        <td>
        <% if ele.status == 0 %>
            <a>未审核</a>
        <% elsif ele.status == 1 %>
            <a>成功</a>
          <% elsif ele.status == 2 %>
              <a>失败</a>
          <% elsif ele.status == 3 %>
              <a>用户撤销</a>
        <% end %>
        </td>
        <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
      </tr>
  <%end%>
  </tbody>
</table>