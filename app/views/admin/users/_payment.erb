<table class="table table-bordered">
  <thead>
  <tr>
    <th>#</th>
    <th>类型</th>
    <th>金额</th>
    <th>充值时间</th>
  </tr>
  </thead>
  <tbody>
  <%@user.payments.each do |ele|%>
      <tr>
        <td><%=ele.id%></td>
        <td><%=ele.payment_type ? '充值' : '提现'%></td>
        <td><%=ele.balance%></td>
        <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
      </tr>
  <%end%>
  </tbody>
</table>