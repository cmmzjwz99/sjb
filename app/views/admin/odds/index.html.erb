<div class="container-fluid">
  <h3 class="page-title">赔率列表</h3>
  <div class="row">
    <div class="col-md-12">
      <!-- BORDERED TABLE -->
      <div class="panel">
        <div style="padding: 20px 25px">
          <form>
            <input type="text" placeholder="账号" class="form-control index-form-control" name="home_team" value="<%=params[:home_team]%>">
            <button class="btn btn-primary" style="margin-left: 3px">查询</button>
            <a type="button" class="btn btn-default" href="<%=new_admin_odd_path%>">添加赔率</a>
          </form>
        </div>
        <div class="panel-body">
          <table class="table table-bordered" style="margin-bottom: 0">
            <thead>
            <tr>
              <th>id</th>
              <th>主队</th>
              <th>主队赔率</th>
              <th>客队</th>
              <th>客队赔率</th>
              <th>规则</th>
              <th>来源</th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <%@odds.each do |ele|%>
                <tr>
                  <td><%=ele.id%></td>
                  <td><%=ele.home_team%></td>
                  <td><%=ele.home_odd%></td>
                  <td><%=ele.away_team%></td>
                  <td><%=ele.away_odd%></td>
                  <td><%=ele.rule%></td>
                  <td><%=ele.source%></td>
                  <td>操作</td>
                </tr>
            <%end%>
            </tbody>
          </table>
          <div class="dataTables_wrapper no-footer" style="text-align: right">
            <%= paginate @odds %>
          </div>
        </div>
      </div>
      <!-- END BORDERED TABLE -->
    </div>
  </div>
</div>