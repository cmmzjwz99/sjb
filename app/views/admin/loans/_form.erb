<%= form_for([:admin, @loan], :html => {enctype: 'multipart/form-data', class: 'stdform'}) do |f| %>

    <div class="form-layout">
      <div class="row">
        <div class="col-6">
          <div class="form-group">
            <label class="form-control-label">姓名: <span class="tx-danger">*</span></label>
            <%= f.text_field(:name, {class: 'form-control'}) %>
          </div>
        </div><!-- col-4 -->
        <div class="col-6">
          <div class="form-group">
            <label class="form-control-label">身份证: <span class="tx-danger">*</span></label>
            <%= f.text_field(:idcard, {class: 'form-control'}) %>
          </div>
        </div><!-- col-4 -->
        <div class="col-6">
          <div class="form-group">
            <label class="form-control-label">手机号: <span class="tx-danger">*</span></label>
            <%= f.text_field(:phone, {class: 'form-control '}) %>
          </div>
        </div><!-- col-4 -->
        <div class="col-6">
          <div class="form-group">
            <label class="form-control-label">借款来源: <span class="tx-danger">*</span></label>
            <%= f.text_field(:source, {class: 'form-control '}) %>
          </div>
        </div><!-- col-4 -->
        <% if @loan.id.present? %>
            <div class="col-lg-12">
              <div class="form-group" style="overflow: auto">
                <label class="form-control-label">征信: <span class="tx-danger">*</span></label>
                <div class="table-responsive">
                  <table class="table mg-b-0">
                    <thead>
                    <tr>
                      <th>文件名</th>
                      <th style="width: 200px">日期</th>
                      <% if @loan.first_verify==Loan::VERIFYFAIL %>
                          <th style="width: 100px">
                            <label class="custom-file" style="display: none">
                              <input type="file" class="loan-file" id="zx" class="custom-file-input">
                            </label>
                            <a onclick="upload('zx')">上传</a>
                          </th>
                      <% end %>
                    </tr>
                    </thead>
                    <tbody id="table-loan-zx">
                    <% @loan.loan_images.where(style:'zx').each do |ele| %>
                        <tr>
                          <td><a href="<%= ele.img.url %>" target="_blank"><%= ele.img.url.split('/').last %></a></td>
                          <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                          <% if @loan.first_verify==Loan::VERIFYFAIL %>
                              <td>
                                <%= link_to '删除', "/admin/loan_images/destroyimg/#{ele.id}",  onclick:"if(confirm('确认删除？')==false)return false;" %>
                              </td>
                          <% end %>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div><!-- col-4 -->
            <div class="col-lg-12">
              <div class="form-group" style="overflow: auto">
                <label class="form-control-label">行驶证: <span class="tx-danger">*</span></label>
                <div class="table-responsive">
                  <table class="table mg-b-0">
                    <thead>
                    <tr>
                      <th>文件名</th>
                      <th style="width: 200px">日期</th>
                      <% if @loan.first_verify==Loan::VERIFYFAIL %>
                          <th  style="width: 100px">
                            <label class="custom-file" style="display: none">
                              <input type="file" class="loan-file" id="xsz" class="custom-file-input">
                            </label>
                            <a onclick="upload('xsz')">上传</a>
                          </th>
                      <% end %>
                    </tr>
                    </thead>
                    <tbody id="table-loan-xsz">
                    <% @loan.loan_images.where(style:'xsz').each do |ele| %>
                        <tr>
                          <td><a href="<%= ele.img.url %>" target="_blank"><%= ele.img.url.split('/').last %></a></td>
                          <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                          <% if @loan.first_verify==Loan::VERIFYFAIL %>
                              <td>
                                <%= link_to '删除', "/admin/loan_images/destroyimg/#{ele.id}", onclick:"if(confirm('确认删除？')==false)return false;" %>
                              </td>
                          <% end %>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div><!-- col-4 -->
            <div class="col-lg-12">
              <div class="form-group" style="overflow: auto">
                <label class="form-control-label">实际公里数: <span class="tx-danger">*</span></label>
                <div class="table-responsive">
                  <table class="table mg-b-0">
                    <thead>
                    <tr>
                      <th>文件名</th>
                      <th style="width: 200px">日期</th>
                      <% if @loan.first_verify==Loan::VERIFYFAIL %>
                          <th  style="width: 100px">
                            <label class="custom-file" style="display: none">
                              <input type="file" class="loan-file" id="sjgls" class="custom-file-input">
                            </label>
                            <a onclick="upload('sjgls')">上传</a>
                          </th>
                      <% end %>
                    </tr>
                    </thead>
                    <tbody id="table-loan-sjgls">
                    <% @loan.loan_images.where(style:'sjgls').each do |ele| %>
                        <tr>
                          <td><a href="<%= ele.img.url %>" target="_blank"><%= ele.img.url.split('/').last %></a></td>
                          <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                          <% if @loan.first_verify==Loan::VERIFYFAIL %>
                              <td>
                                <%= link_to '删除', "/admin/loan_images/destroyimg/#{ele.id}", onclick:"if(confirm('确认删除？')==false)return false;" %>
                              </td>
                          <% end %>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div><!-- col-4 -->
            <% if @loan.first_verify==Loan::VERIFYFAIL %>
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label">是否提交网审: <span class="tx-danger">*</span></label>
                    <div class="controls">
                      <%= f.radio_button :first_verify, Loan::VERIFYFAIL %> 暂不提交网审
                      <%= f.radio_button :first_verify, Loan::UNVERIFIED %> 提交网审
                    </div>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div><!-- row -->

      <% if @loan.first_verify==Loan::VERIFYFAIL %>
          <div class="form-layout-footer">
            <button class="btn btn-info mg-r-5">保存</button>
          </div><!-- form-layout-footer -->
      <% elsif @loan.first_verify==Loan::VERIFYPASS %>
          <div class="form-layout-footer">
            <div style="text-align: right;color: green">审核通过</div>
          </div><!-- form-layout-footer -->
          <%else%>
          <div class="form-layout-footer">
            <div style="text-align: right;color: red">审核中</div>
          </div><!-- form-layout-footer -->
      <% end %>
    </div><!-- form-layout -->
<% end %>