<%= form_for([:admin, @loan], :html => {enctype: 'multipart/form-data', class: 'stdform'}) do |f| %>

    <div class="form-layout">
      <div class="row mg-b-25">
        <div class="col-lg-12">
          <div class="form-group">
            <label class="form-control-label">姓名: <span class="tx-danger">*</span></label>
            <%= f.text_field(:name, {class: 'form-control col-6'}) %>
          </div>
        </div><!-- col-4 -->
        <div class="col-lg-12">
          <div class="form-group">
            <label class="form-control-label">身份证: <span class="tx-danger">*</span></label>
            <%= f.text_field(:idcard, {class: 'form-control col-6'}) %>
          </div>
        </div><!-- col-4 -->
        <div class="col-lg-12">
          <div class="form-group">
            <label class="form-control-label">手机号: <span class="tx-danger">*</span></label>
            <%= f.text_field(:phone, {class: 'form-control col-6'}) %>
          </div>
        </div><!-- col-4 -->
        <div class="col-lg-12">
          <div class="form-group">
            <label class="form-control-label">借款来源: <span class="tx-danger">*</span></label>
            <%= f.text_field(:source, {class: 'form-control col-6'}) %>
          </div>
        </div><!-- col-4 -->
        <!--div class="col-lg-4">
          <div class="form-group mg-b-10-force">
            <label class="form-control-label">Country: <span class="tx-danger">*</span></label>
            <select class="form-control select2" data-placeholder="Choose country">
              <option label="Choose country"></option>
              <option value="USA">United States of America</option>
              <option value="UK">United Kingdom</option>
              <option value="China">China</option>
              <option value="Japan">Japan</option>
            </select>
          </div>
        </div--><!-- col-4 -->
      </div><!-- row -->

      <div class="form-layout-footer">
        <button class="btn btn-info mg-r-5">保存</button>
        <a class="btn btn-secondary" onclick="window.history.go(-1)" style="color: white">返回</a>
      </div><!-- form-layout-footer -->
    </div><!-- form-layout -->
<% end %>