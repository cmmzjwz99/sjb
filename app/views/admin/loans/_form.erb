<%= form_for([:admin, @loan], :html => {enctype: 'multipart/form-data', class: 'stdform'}) do |f| %>

    <div class="form-layout">
      <div class="row">
        <% if @loan.id.present? %>
            <%=render 'detail_message'%>
            <%=render 'form_message'%>
            <% if @loan.first_verify==Loan::VERIFYFAIL %>
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label">是否提交网审: <span class="tx-danger">*</span></label>
                    <div class="controls">
                      <%= f.radio_button :first_verify, Loan::VERIFYFAIL %> 暂不提交初审
                      <%= f.radio_button :first_verify, Loan::UNVERIFIED %> 提交初审
                    </div>
                  </div>
                </div>
            <% end %>
        <%else%>

            <div class="col-4">
              <div class="form-group">
                <label class="form-control-label">姓名: <span class="tx-danger">*</span></label>
                <%= f.text_field(:name, {class: 'form-control'}) %>
              </div>
            </div><!-- col-4 -->
        <% end %>
      </div><!-- row -->

      <% if @loan.first_verify==Loan::VERIFYFAIL %>
          <div class="form-layout-footer">
            <button class="btn btn-info mg-r-5">保存</button>
            <% if @loan.id.present? %>
                <a class="btn btn-secondary mg-r-5" style="color: white" href="/admin/loans/instalment/<%= @loan.id %>" target="_blank">分期预览</a>
            <% end %>
          </div><!-- form-layout-footer -->
      <% elsif @loan.first_verify==Loan::VERIFYPASS %>
          <div class="form-layout-footer">
            <div style="text-align: right;color: green">审核通过</div>
          </div><!-- form-layout-footer -->
          <%else%>
          <div class="form-layout-footer">
            <div style="text-align: right;color: red">审核中</div>
          </div><!-- form-layout-footer -->
      <% end %>
    </div><!-- form-layout -->
<% end %>