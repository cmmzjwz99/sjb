<div class="sl-pagebody">
  <div class="sl-page-title">
    <div class="card pd-20 pd-sm-40">

      <h6 class="card-body-title  mg-b-20">网审信息</h6>

      <%=render 'form'%>

    </div>

    <%if @loan.first_verify==Loan::VERIFYPASS%>
        <%=render 'basic'%>
    <%end%>

