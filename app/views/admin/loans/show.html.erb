<%content_for :js do%>
    <script>
        $('.customer-file').change(function () {
            var form = new FormData();
            form.append('img',$(this)[0].files[0]);
            form.append('id','<%=@loan.id%>');

            $.ajax({
                url:"<%=img_upload_admin_customer_messages_path%>",
                method:"post",
                data:form,
                processData:false,
                contentType:false,
                success:function(data){
                    console.log(data);
                    if(data.code==0){
                        alert('上传成功')
                        html='<tr> <td><a href="'+data.data.url+'" target="_blank">'+data.data.name+'</a></td> \
                            <td>'+data.data.date+'</td><td><a data-confirm="确定删除?" rel="nofollow"  \
                            data-method="delete" href="/admin/customer_images/'+data.data.id+'">删除</a></td></tr>'
                        $('#table-customer').append(html);
                    }
                },
                error:function(e){
                    alert("错误！！");
                }
            });
        });


        $('.loan-file').change(function () {
            var form = new FormData();
            form.append('img',$(this)[0].files[0]);
            form.append('typename',$(this).attr('id'));
            form.append('loan_id','<%=@loan.id%>');

            $.ajax({
                url:"<%=uploadimg_admin_loan_images_path%>",
                method:"post",
                data:form,
                processData:false,
                contentType:false,
                success:function(data){
                    console.log(data);
                    if(data.code==0){
                        alert('上传成功')
                        id='#table-loan-'+data.data.type;
                        html='<tr> <td><a href="'+data.data.url+'" target="_blank">'+data.data.name+'</a></td> \
                            <td>'+data.data.date+'</td><td><a data-confirm="确定删除?" rel="nofollow"  \
                            data-method="delete" href="/admin/loan_images/'+data.data.id+'">删除</a></td></tr>'
                        $(id).append(html);
                    }
                },
                error:function(e){
                    alert("错误！！");
                }
            });
        });
        function upload(name) {
            name='#'+name
            $(name).click()
        }

        $('.fc-datepicker').datepicker({
            showOtherMonths: true,
            selectOtherMonths: true,
            dateFormat:'yy-mm-dd'
        });

        $('.select2').select2({
            minimumResultsForSearch: Infinity
        });
    </script>
<%end%>