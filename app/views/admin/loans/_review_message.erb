
<div class="card pd-20 pd-sm-40 mg-t-20">
  <h6 class="card-body-title  mg-b-20">复审信息</h6>
  <%= form_tag('/admin/loans/review', {enctype: 'multipart/form-data',class:'stdform'}) do %>
      <%= hidden_field_tag 'loan[id]', params[:id] %>
      <div class="form-layout">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group" style="overflow: auto">
              <label class="form-control-label">借款人资料: </label>
              <div class="table-responsive">
                <table class="table mg-b-0">
                  <thead>
                  <tr>
                    <th>文件名</th>
                    <th style="width: 200px">日期</th>
                    <% if @loan.review_verify==Loan::VERIFYFAIL %>
                        <th style="width: 100px">
                          <label class="custom-file" style="display: none">
                            <input type="file" class="loan-file" id="jkrzl" class="custom-file-input">
                          </label>
                          <a onclick="upload('jkrzl')">上传</a>
                        </th>
                    <% end %>
                  </tr>
                  </thead>
                  <tbody id="table-loan-jkrzl">
                  <% @loan.loan_images.where(style:'jkrzl').each do |ele| %>
                      <tr>
                        <td><a href="<%= ele.img.url %>" target="_blank"><%= ele.img.url.split('/').last %></a></td>
                        <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                        <% if @loan.review_verify==Loan::VERIFYFAIL %>
                            <td>
                              <%= link_to '删除', admin_loan_image_path(ele), method: :delete, data: { confirm: '确定删除?' }%>
                            </td>
                        <% end %>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div><!-- col-4 -->
          <div class="col-lg-6">
            <div class="form-group" style="overflow: auto">
              <label class="form-control-label">车辆照片: </label>
