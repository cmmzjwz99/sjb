                        <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                        <% if @loan.review_verify==Loan::VERIFYFAIL %>
                            <td>
                              <%= link_to '删除', "/admin/loan_images/destroyimg/#{ele.id}", onclick:"if(confirm('确认删除？')==false)return false;" %>
                            </td>
                        <% end %>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div><!-- col-4 -->
          <div class="col-lg-6">
            <div class="form-group" style="overflow: auto">
              <label class="form-control-label">合同签署: </label>
              <div class="table-responsive">
