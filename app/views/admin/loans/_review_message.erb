                          <label class="custom-file" style="display: none">
                            <input type="file" class="loan-file" id="clzp" class="custom-file-input">
                          </label>
                          <a onclick="upload('clzp')">上传</a>
                        </th>
                    <% end %>
                  </tr>
                  </thead>
                  <tbody id="table-loan-clzp">
