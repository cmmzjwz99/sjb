
<%content_for :css do%>
<%end%>

<nav class="breadcrumb sl-breadcrumb">
  <!--a class="breadcrumb-item" href="index.html">Starlight</a-->
  <a class="breadcrumb-item" href="<%=first_admin_verify_index_path%>">待审名单</a>
  <span class="breadcrumb-item active">网审</span>
</nav>

<div class="sl-pagebody">
  <div class="sl-page-title">
    <div class="card pd-20 pd-sm-40">
      <h6 class="card-body-title">网审信息</h6>
      <%=render 'loan_form'%>
    </div>
    <div class="card pd-20 pd-sm-40 mg-t-20">
      <h6 class="card-body-title">初审信息</h6>

      <%= form_tag('/admin/verify/basic_verify', class:'stdform') do %>
          <%= hidden_field_tag 'id', params[:id] %>
          <div class="form-layout">
            <div class="row">
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">分公司: </label>
                  <%= text_field_tag('basic[company]',@basic.company, {class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">贷款形式: </label>
                  <%= text_field_tag('basic[dkxs]', @basic.dkxs,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">贷款类型: </label>
                  <%= text_field_tag('basic[dklx]', @basic.dklx,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">贷款期限: </label>
                  <%= text_field_tag('basic[dkqx]', @basic.dkqx,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">担保方式: </label>
                  <%= text_field_tag('basic[dbfs]', @basic.dbfs,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">担保类型: </label>
                  <%= text_field_tag('basic[dblx]', @basic.dblx,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">还款方式: </label>
                  <%= text_field_tag('basic[hkfs]', @basic.hkfs,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">贷款产品: </label>
                  <%= text_field_tag('basic[dkcp]', @basic.dkcp,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">贷款金额: </label>
                  <%= text_field_tag('basic[dkje]', @basic.dkje,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">临时额度: </label>
                  <%= text_field_tag('basic[lsed]', @basic.lsed,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">总借款金额: </label>
                  <%= text_field_tag('basic[zjkje]', @basic.zjkje,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">货款种类: </label>
                  <%= text_field_tag('basic[hkzl]', @basic.hkzl,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">借款用途: </label>
                  <%= text_field_tag('basic[jkyt]', @basic.jkyt,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">还款来源: </label>
                  <%= text_field_tag('basic[hkly]', @basic.hkly,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">货款期限单位: </label>
                  <%= text_field_tag('basic[dkqxdw]', @basic.dkqxdw,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">开始日期: </label>
                  <%= text_field_tag('basic[ksrq]',(@basic.ksrq.present? ? @basic.ksrq : Time.now).strftime("%Y-%m-%d"), {class: 'form-control fc-datepicker',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">结束日期: </label>
                  <%= text_field_tag('basic[jsrq]',(@basic.jsrq.present? ? @basic.jsrq : Time.now).strftime("%Y-%m-%d"), {class: 'form-control fc-datepicker',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">制单人: </label>
                  <%= text_field_tag('basic[zdr]', @basic.zdr,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-3">
                <div class="form-group">
                  <label class="form-control-label">制单日期: </label>
                  <%= text_field_tag('basic[zdrq]',(@basic.zdrq.present? ? @basic.zdrq : Time.now).strftime("%Y-%m-%d"), {class: 'form-control fc-datepicker',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-3">
                <div class="form-group">
                  <label class="form-control-label">申请表: </label>
                  <a href="<%= @basic.sqb_url.to_s %>" target="_blank">
                    <%= image_tag(@basic.sqb_url.to_s, class: 'col-12') %>
                  </a>
                </div>
              </div><!-- col-4 -->
              <div class="col-3">
                <div class="form-group">
                  <label class="form-control-label">车辆信息表: </label>
                  <a href="<%= @basic.clxxb_url.to_s %>" target="_blank">
                    <%= image_tag(@basic.clxxb_url.to_s, class: 'col-12') %>
                  </a>
                </div>
              </div><!-- col-4 -->
              <div class="col-3">
                <div class="form-group">
                  <label class="form-control-label">车辆检测表: </label>
                  <a href="<%= @basic.cljcb_url.to_s %>" target="_blank">
                    <%= image_tag(@basic.cljcb_url.to_s, class: 'col-12') %>
                  </a>
                </div>
              </div><!-- col-4 -->
              <div class="col-3">
                <div class="form-group">
                  <label class="form-control-label">营业部审批表: </label>
                  <a href="<%= @basic.yybspb_url.to_s %>" target="_blank">
                    <%= image_tag(@basic.yybspb_url.to_s, class: 'col-12') %>
                  </a>
                </div>
              </div><!-- col-4 -->
              <div class="col-3">
                <div class="form-group">
                  <label class="form-control-label">车300: </label>
                  <a href="<%=@basic.csb_url.to_s%>" target="_blank">
                    <%= image_tag(@basic.csb_url.to_s,class: 'col-12') %>
                  </a>
                </div>
              </div><!-- col-4 -->
            </div><!-- row -->

            <div class="col-lg-6">
              <div class="form-group">
                <label class="form-control-label">审核不通过原因: </label>
                <%= text_field_tag('comment','', {class: 'form-control'}) %>
              </div>
            </div><!-- col-4 -->
            <% if @basic.status==Loan::UNVERIFIED %>
                <div>
                  <div class="form-group">
                    <label class="form-control-label">是否审核通过: </label>
                    <div class="controls">
                      <%= radio_button_tag('basic[status]', Loan::VERIFYPASS, @basic.status==Loan::VERIFYPASS ? '1' : nil) %>
                      通过
                      <%= radio_button_tag('basic[status]', Loan::VERIFYFAIL, @basic.status==Loan::VERIFYFAIL ? '1' : nil) %>
                      不通过
                    </div>
                  </div>
                </div>

                <div class="form-layout-footer">
                  <button class="btn btn-info mg-r-5">保存</button>
                </div><!-- form-layout-footer -->
            <% end %>

          </div><!-- form-layout -->
      <%end%>
    </div>
  </div><!-- sl-page-title -->

</div><!-- sl-pagebody -->