<%content_for :css do%>
<%end%>

<nav class="breadcrumb sl-breadcrumb">
  <!--a class="breadcrumb-item" href="index.html">Starlight</a-->
  <a class="breadcrumb-item" href="<%=first_admin_verify_index_path%>">待审名单</a>
  <span class="breadcrumb-item active">网审</span>
</nav>

<div class="sl-pagebody">
  <div class="sl-page-title">
    <div class="card pd-20 pd-sm-40">

      <h6 class="card-body-title">网审</h6>

      <%= form_tag('/admin/verify/first_verify', class:'stdform') do %>
          <%= hidden_field_tag 'id', params[:id] %>
          <div class="form-layout">
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label">姓名: </label>
                  <%= text_field_tag('name',@loan.name, {class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label">身份证: </label>
                  <%= text_field_tag('idcard', @loan.idcard,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label">手机号: </label>
                  <%= text_field_tag('phone', @loan.phone,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label">借款来源: </label>
                  <%= text_field_tag('source', @loan.source,{class: 'form-control',disabled:''}) %>
                </div>
              </div><!-- col-4 -->

                  <div class="col-lg-12">
                    <div class="form-group" style="overflow: auto">
                      <label class="form-control-label">征信: <span class="tx-danger">*</span></label>
                      <div class="table-responsive">
                        <table class="table mg-b-0">
                          <thead>
                          <tr>
                            <th>文件名</th>
                            <th style="width: 200px">日期</th>
                          </tr>
                          </thead>
                          <tbody id="table-loan-zx">
                          <% @loan.loan_images.where(style:'zx').each do |ele| %>
                              <tr>
                                <td><a href="<%= ele.img.url %>" target="_blank"><%= ele.img.url.split('/').last %></a></td>
                                <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                              </tr>
                          <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div><!-- col-4 -->
                  <div class="col-lg-12">
                    <div class="form-group" style="overflow: auto">
                      <label class="form-control-label">行驶证: <span class="tx-danger">*</span></label>
                      <div class="table-responsive">
                        <table class="table mg-b-0">
                          <thead>
                          <tr>
                            <th>文件名</th>
                            <th style="width: 200px">日期</th>
                          </tr>
                          </thead>
                          <tbody id="table-loan-xsz">
                          <% @loan.loan_images.where(style:'xsz').each do |ele| %>
                              <tr>
                                <td><a href="<%= ele.img.url %>" target="_blank"><%= ele.img.url.split('/').last %></a></td>
                                <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                              </tr>
                          <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div><!-- col-4 -->
                  <div class="col-lg-12">
                    <div class="form-group" style="overflow: auto">
                      <label class="form-control-label">实际公里数: <span class="tx-danger">*</span></label>
                      <div class="table-responsive">
                        <table class="table mg-b-0">
                          <thead>
                          <tr>
                            <th>文件名</th>
                            <th style="width: 200px">日期</th>
                          </tr>
                          </thead>
                          <tbody id="table-loan-sjgls">
                          <% @loan.loan_images.where(style:'sjgls').each do |ele| %>
                              <tr>
                                <td><a href="<%= ele.img.url %>" target="_blank"><%= ele.img.url.split('/').last %></a></td>
                                <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                              </tr>
                          <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div><!-- col-4 -->

              <div class="col-lg-6">
                <div class="form-group">
                  <label class="form-control-label">审核不通过原因: </label>
                  <%= text_field_tag('comment','', {class: 'form-control'}) %>
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-12">
                <div class="form-group">
                  <label class="form-control-label">审核: <span class="tx-danger">*</span></label>
                  <div class="controls">
                    <%=radio_button_tag('first_verify',Loan::VERIFYPASS,@loan.first_verify==Loan::VERIFYPASS ? '1' : nil)%>通过
                    <%=radio_button_tag('first_verify',Loan::VERIFYFAIL,@loan.first_verify==Loan::VERIFYFAIL ? '1' : nil)%>不通过

                  </div>
                </div>
              </div>
            </div><!-- row -->
            <%if @loan.first_verify==Loan::UNVERIFIED%>
            <div class="form-layout-footer">
              <button class="btn btn-info mg-r-5">保存</button>
              <a class="btn btn-secondary" onclick="window.history.go(-1)" style="color: white">返回</a>
            </div><!-- form-layout-footer -->
            <%end%>
          </div><!-- form-layout -->
      <%end%>
    </div>
  </div><!-- sl-page-title -->

</div><!-- sl-pagebody -->