<div class="container-fluid">
  <h3 class="page-title">飞鲸比赛</h3>
  <div class="row">
    <div class="col-md-12">
      <!-- BORDERED TABLE -->
      <div class="panel">
        <div style="padding: 20px 25px">
          <form>
            <input type="text" placeholder="名称" class="form-control index-form-control" name="name" value="<%=params[:name]%>">
            <button class="btn btn-primary" style="margin-left: 3px">查询</button>
          </form>
        </div>
        <div class="panel-body">
          <table class="table table-bordered" style="margin-bottom: 0">
            <thead>
            <tr>
              <th>id</th>
              <th>比赛名</th>
              <th>主队</th>
              <th>客队</th>
              <th>开始时间</th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <%@matches.each do |ele|%>
                <tr>
                  <td><%=ele.id%></td>
                  <td><%=ele.name%></td>
                  <td><%=ele.team1%></td>
                  <td><%=ele.team2%></td>
                  <td><%=ele.time.strftime('%Y-%m-%d %H:%M:%S')%></td>
                  <td>
                    <a href="/admin/fj_matches/add_match?id=<%=ele.id%>">添加到比赛</a>
                  </td>
                </tr>
            <%end%>
            </tbody>
          </table>
          <div class="dataTables_wrapper no-footer" style="text-align: right">
            <%= paginate @matches %>
          </div>
        </div>
      </div>
      <!-- END BORDERED TABLE -->
    </div>
  </div>
</div>

<% content_for :js do %>

<% end %>