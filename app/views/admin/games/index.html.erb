<div class="container-fluid">
  <h3 class="page-title">博彩</h3>
  <div class="row">
    <div class="col-md-12">
      <!-- BORDERED TABLE -->
      <div class="panel">
        <div style="padding: 20px 25px">
          <form>
            <input type="text" placeholder="账号" class="form-control index-form-control" name="name" value="<%=params[:name]%>">
            <button class="btn btn-primary" style="margin-left: 3px">查询</button>
            <a type="button" class="btn btn-default" href="<%=new_admin_game_path%>">添加博彩</a>
          </form>
        </div>
        <div class="panel-body">
          <table class="table table-bordered" style="margin-bottom: 0">
            <thead>
            <tr>
              <th>id</th>
              <th>比赛名</th>
              <th>赔率1</th>
              <th>赔率2</th>
              <th>类型</th>
              <th>状态</th>
              <th>比赛场次</th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <%@games.each do |ele|%>
                <tr>
                  <td><%=ele.id%></td>
                  <td><%=ele.name%></td>
                  <td><%=ele.odds1%></td>
                  <td><%=ele.odds2%></td>
                  <td><%=ele.category%></td>
                  <td><%=ele.status%></td>
                  <td><%=ele.match.name %></td>
                  <td>
                    <% if ele.status!=1 %>
                        <a href="<%= admin_game_path(ele) %>">
                          修改赔率
                        </a>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="<%= settlement_admin_games_path(ele)%>">
                          结算
                        </a>
                    <% end %>
                  </td>
                </tr>
            <%end%>
            </tbody>
          </table>
          <div class="dataTables_wrapper no-footer" style="text-align: right">
            <%= paginate @games %>
          </div>
        </div>
      </div>
      <!-- END BORDERED TABLE -->
    </div>
  </div>
</div>