<div class="container-fluid">
  <h3 class="page-title"><%="#{@game.match.name} #{@game.match.team1}VS#{@game.match.team2} #{@game.name}"%></h3>
  <div class="row">
    <div class="col-md-12">
      <!-- BORDERED TABLE -->
      <div class="panel">
        <div style="padding: 20px 25px">
          <form>
            <input type="hidden" value="<%=params[:id]%>" name="id">
            <input type="text" placeholder="账号" class="form-control index-form-control" name="name" value="<%=params[:name]%>">
            <button class="btn btn-primary" style="margin-left: 3px">查询</button>
          </form>
        </div>
        <div class="panel-body">
          <table class="table table-bordered" style="margin-bottom: 0">
            <thead>
            <tr>
              <th>押注人</th>
              <th>押注内容</th>
              <th>金额</th>
              <th>赔率</th>
              <th>时间</th>
            </tr>
            </thead>
            <tbody>
            <%@game.orders.where(@conditions).each do |ele|%>
                <tr>
                  <td><%=ele.user.login%></td>
                  <td><%=ele.get_team%></td>
                  <td><%=ele.point%></td>
                  <td><%=ele.odds%></td>
                  <td><%=ele.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
                </tr>
            <%end%>
            </tbody>
          </table>
        </div>
      </div>
      <!-- END BORDERED TABLE -->
    </div>
  </div>
</div>