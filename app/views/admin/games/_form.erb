<%= form_tag('/admin/games', :html => {enctype: 'multipart/form-data', class: 'stdform'}) do |f| %>
    <div class="row">
      <div class="form-group col-xs-4">
        <label class="form-control-label">比赛名: </label>
        <%= text_field_tag('game[name]', @game.name, {class: 'form-control'}) %>
      </div>
      <div class="form-group col-xs-4">
        <label class="form-control-label">类型: </label>
        <%= text_field_tag('game[category]', @game.category, {class: 'form-control'}) %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-xs-4">
        <label class="form-control-label">几率1: </label>
        <%= text_field_tag('game[odds1]', @game.odds1, {class: 'form-control'}) %>
      </div>
      <div class="form-group col-xs-4">
        <label class="form-control-label">几率2: </label>
        <%= text_field_tag('game[odds2]', @game.odds2, {class: 'form-control'}) %>
      </div>
    </div>

    <div class="row">

      <div class="form-group col-xs-4">
        <label class="form-control-label">比赛场次: </label>
        <select name="game[match_id]" id="game[match_id]" class="form-control">
          <% Match.where({}).each do |ele| %>
              <option value="<%= ele.id %>" <%= ele.id==@game.id ? 'selected' : '' %>><%= ele.name %></option>
              <!--<option value="<%= ele.id %>" <%= ele.id==@game.id ? 'selected' : '' %>><%= ele.id %></option>-->
          <% end %>
        </select>

        <!--<%= text_field_tag('game[match_id]', @game.id, {class: 'form-control2'}) %>-->

      </div>
    </div>

    <div class="row">
      <div class="form-group col-xs-4">
        <label class="form-control-label">状态: </label>
        <%= text_field_tag('game[status]', @game.status, {class: 'form-control'}) %>
      </div>
    </div>

    <div>
      <button class="btn btn-primary">添加</button>
    </div>
<% end %>
