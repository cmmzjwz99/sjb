<div class="container-fluid">
  <h3 class="page-title">结算</h3>
  <div class="row">
    <div class="col-md-12">
      <!-- BORDERED TABLE -->
      <div class="panel">
        <div class="panel-heading"></div>
        <div class="panel-body" style="padding-top: 0">
          <%= form_for([:admin, @game], :html => {enctype: 'multipart/form-data', class: 'stdform'}) do |f| %>
              <div class="row">
                <div class="form-group col-xs-4">
                  <label class="form-control-label">比赛名: </label>
                  <%= text_field_tag('', "#{@game.match.name} #{@game.match.team1}VS#{@game.match.team2} #{@game.name}", {class: 'form-control'}) %>
                </div>
              </div>
              <div class="row">
                <div class="form-group col-xs-4">
                  <label class="form-control-label">获胜队伍: </label>
                  <select name="game[win_team]" id="game[win_team]" class="form-control">
                    <option value="1" ><%=@game.name1%></option>
                    <option value="2" ><%=@game.name2%></option>
                    <option value="3" ><%=@game.name3%></option>
                  </select>
                </div>
              </div>
              <div class="row">
                <div class="form-group col-xs-4">
                <label class="form-control-label">是否结算: </label>
                <select name="game[status]" id="game[status]" class="form-control">
                  <option value="0">否</option>
                  <option value="1">是</option>
                </select>
              </div>
              </div>


              <div>
                <button class="btn btn-primary">保存</button>
              </div>
          <% end %>

        </div>
        <div style="padding: 10px"></div>
      </div>
      <!-- END BORDERED TABLE -->
    </div>
  </div>
</div>